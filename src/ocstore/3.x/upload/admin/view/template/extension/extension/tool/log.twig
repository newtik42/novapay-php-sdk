<div class="page-header">
    <div class="container-fluid">
        <div class="pull-right">

            {% if tool_button_autoupdate %}
            <button type="button" data-toggle="tooltip" title="{{ text_button_download }}" 
                    onclick="nt_log_downloader(this, '{{ log_type }}')"
                    class="btn btn-primary">
