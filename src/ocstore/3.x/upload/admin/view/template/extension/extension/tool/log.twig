<div class="panel panel-default">
<div id="log_warning" class="form-group hide">
            <div class="warning col-sm-12">
                <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> 
                    <div id="log_warning_text"></div>
                </div>
            </div>
        </div>

<div class="page-header">
    <div class="container-fluid">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-exclamation-triangle"></i>{{ text_tab_sandbox_log_title }}</h3>
            <div class="pull-right">
                <a id="log_refresh" onclick="nt_log_reload(this, '{{ log_type }}')" data-toggle="tooltip" class="btn btn-warning">
                    <i class="fa fa-refresh"></i>
                </a>
                <a onclick="nt_log_downloader(this, '{{ log_type }}')" target="_blank" data-toggle="tooltip" class="btn btn-primary">
                    <i class="fa fa-download"></i>
                </a>
                <a onclick="nt_log_clear(this, '{{ log_type }}')" data-toggle="tooltip" class="btn btn-danger">
                    <i class="fa fa-eraser"></i>
                </a>
            </div>
        </div>
    </div>

    {% if tool_setting_autoupdate %}


        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">{{ text_entry }}</label>
                <select class="control-label"></select>
            </div>

            <div class="col-sm-2">
                <label class="control-label">
                    <span data-toggle="tooltip" title="{{ text_help }}">{{ text_entry }}</span>
                </label>
                <select id="pause" class="form-control">
                    <option value="5000">5сек</option>
                    <option value="10000" selected="">10сек</option>
                    <option value="15000">15сек</option>
                    <option value="20000">20сек</option>
                    <option value="25000">25сек</option>
                    <option value="30000">30сек</option>
                    <option value="60000">1мин</option>
                </select>
            </div>

            <div class="col-sm-2">
                <label class="control-label">
                    <span data-toggle="tooltip" title="{{ text_help }}">{{ text_entry }}</span>
                </label>
                <select class="control-label"></select>
            </div>
        </div>


    {% endif %}
    </div>
    
    <div class="form-group">
        <div class="tab-pane active">
            <textarea  rows="28" id="log-{{ log_type }}" readonly="" class="form-control">{{ log_text }}</textarea>
        </div>
    </div>