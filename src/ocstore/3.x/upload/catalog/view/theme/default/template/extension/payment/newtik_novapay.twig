<div class="row">
    <div class="buttons">
        <div class="pull-right">
            <input type="button" value="{{ button_confirm }}" id="button-confirm" class="btn btn-primary" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <div id="newtik_novapay_pay" style="display: none">
            <a href=""  class="btn btn-primary">{{ button_pay }}</a>
            <br>
            <img src="">
        </div>
    </div>    
</div>
<div rozetkapay_alert_error style="display: none; color: red"></div>
<script>
    $('[newtik_novapay_alert_error]').html('').hide()
    $('#button-confirm').bind('click', function () {
        $('[newtik_novapay_alert_error]').hide()
        let but = $(this)
        $('#button-confirm').parent().find('.alert').remove()
        $.ajax({
            url: 'index.php?route={{ path }}/createPay',
            dataType: 'json'
        }).done(function (json) {



            if (json.pay && !json.qrcode && !json.pay_holding) {
                location = json.pay_href
            }

            if (json.pay) {

                $('#newtik_novapay_pay a').attr('href', json.pay_href)

                if (json.qrcode) {
                    $('#newtik_novapay_pay img').attr('src', json.pay_qrcode)
                }
                $('#newtik_novapay_pay').show()

            }


            if (json.pay || json.pay_holding) {
                $('#button-confirm').hide()
            }

            if (json.alert.length > 0) {
                $('[newtik_novapay_alert_error]').html(json['alert'].join('<br>')).show()

            }
        });
        return false;
    });
</script>
